                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Facebook: " />

            <TextView
                android:id="@+id/textInstagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instagram: " />

            <TextView
                android:id="@+id/textTwintter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Twintter: " />

            <LinearLayout
